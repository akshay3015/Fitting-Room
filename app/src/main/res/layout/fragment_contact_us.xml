<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#c1dff2"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/companyEmail"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/contact_circle"
            android:src="@drawable/ic_email"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:padding="@dimen/activity_horizontal_margin"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:textColor="#FFFFFF"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="somthing@gmail.com"
            android:lines="3"
            android:textSize="12sp"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:textColor="#FFFFFF"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight=".9"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/companyPhone"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/contact_circle"
            android:src="@drawable/ic_phone"
            android:padding="@dimen/activity_horizontal_margin"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:textColor="#FFFFFF"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(999) - 999 - 9999"
            android:textSize="12sp"
            android:textAlignment="center"
            android:layout_marginTop="12dp"
            android:textColor="#FFFFFF"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/companySocial"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/contact_circle"
            android:src="@drawable/ic_facebook"
            android:padding="@dimen/activity_horizontal_margin"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Facebook"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:textColor="#FFFFFF"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="somethingllc"
            android:textSize="12sp"
            android:textAlignment="center"
            android:layout_marginTop="12dp"
            android:textColor="#FFFFFF"/>

    </LinearLayout>

</LinearLayout>