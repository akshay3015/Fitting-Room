<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/realPhotoSwipeCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="#FFF"
        android:orientation="vertical"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        app:cardPreventCornerOverlap="false">


        <ImageView
            android:id="@+id/photoImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="55dp"
            android:layout_marginBottom="55dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_marginBottom="64dp"
            android:src="@drawable/ic_action_zoom"
            android:background="@color/semi_transparent_background"
            android:id="@+id/zoom_button"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="64dp"
            android:src="@drawable/comments_button"
            android:background="@color/semi_transparent_background"
            android:id="@+id/comment_button"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="top"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingEnd="20dp"
            android:paddingStart="20dp">

            <ImageView
                android:id="@+id/userImage"
                android:layout_width="@dimen/fab_size"
                android:layout_height="@dimen/fab_size"
                android:gravity="start"
                android:src="@drawable/ic_profile"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_gravity="bottom"
                android:layout_weight="2"
                android:gravity="center|start"
                android:orientation="vertical"
                android:paddingEnd="20dp"
                android:paddingStart="20dp">

                <TextView
                    android:id="@+id/nameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/uploadederNameTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/more_options"
                android:layout_gravity="center|end"
                android:background="@color/semi_transparent_background"
                android:id="@+id/photo_card_options"/>

        </LinearLayout>

        <com.akexorcist.roundcornerprogressbar.IconRoundCornerProgressBar
            android:id="@+id/rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="bottom|center"
            app:rcBackgroundColor="@color/black_overlay"
            app:rcBackgroundPadding="2dp"
            app:rcIconBackgroundColor="@color/colorPrimaryDark"
            app:rcIconPadding="5dp"
            app:rcIconSize="32dp"
            app:rcIconSrc="@drawable/ic_thumb_up_white_24dp"
            app:rcMax="100"
            app:rcProgress="90"
            app:rcProgressColor="@color/colorPrimary"
            app:rcRadius="5dp" />

    </android.support.v7.widget.CardView>

</FrameLayout>