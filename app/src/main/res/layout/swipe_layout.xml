<FrameLayout
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:id="@+id/userFashionStylePhoto"
        tools:src="@drawable/smiley"
        />

    <ImageView
        android:id="@+id/thumb_down"
        android:layout_width="24dp"
        android:alpha=".5"
        android:layout_height="24dp"
        android:layout_margin="16dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_thumb_down_white_24dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_margin="16dp"
        android:id="@+id/amount_thumbs_down"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/thumb_down"/>

    <ImageView
        android:id="@+id/thumb_up"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="16dp"
        android:alpha=".5"
        android:src="@drawable/ic_thumb_up_white_24dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textSize="20sp"
        android:id="@+id/amount_thumbs_up"
        android:layout_below="@id/thumb_up"
        android:layout_alignParentRight="true"/>

</RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:id="@+id/occasion_subtitle"
            tools:text="TEST"
            android:textSize="16sp"/>
</LinearLayout>
</FrameLayout>
